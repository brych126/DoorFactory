                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<h1 class="mb-3" style="color: #008b8b">Кольори</h1>
<table id="dtColors" class="table table-striped table-bordered table-sm dtDoorTables" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Назва
            </th>
            <th class="th-sm">
                Забарвлення
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i=0;i<Model.Colors.Count;++i)
        {
            <tr>
                <td>@Model.Colors[i].Name</td>
                <td style="background-color: @Model.ColorCode[i]"></td>
            </tr>
        }
    </tbody>
</table>